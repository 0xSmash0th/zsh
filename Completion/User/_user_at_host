#autoload

if [[ -prefix 1 *@ ]]; then
  local user=${PREFIX/@}

  compset -P 1 '*@'

  _wanted -C user-at hosts expl "hostnames for $user" &&
      _combination accounts_users_hosts users="$user" hosts "$expl[@]" "$@"
else
  _wanted users expl "usernames" &&
      _combination accounts_users_hosts users -S@ -q "$expl[@]" "$@"
fi
