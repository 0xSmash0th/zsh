        '-V[show version]' \
        '-l[list commands]' \
        '-h[show help]' \
        '-v[validate timestamp file]' \
        '-k[remove timestamp file]' \
        '-b[run command in background]' \
        '-r:Kerberos realm:' \
        '-p:prompt:' \
        '-u:user name:_users' \
        '-s[run SHELL]' \
        '-H[set HOME environment variable]' \
        '*::command and arguments:_normal'
