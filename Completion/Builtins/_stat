#compdef stat

local expl

if [[ "$words[CURRENT-1]" = -[AH] ]]; then
  _description expl array
  compgen "$expl[@]" -A
else
  _description expl 'inode element'
  [[ "$PREFIX[1]" = + ]] &&
      compadd "$expl[@]" - +device +inode +mode +nlink +uid +gid +rdev +size \
                           +atime +mtime +ctime +blksize +block +link
  _files
fi
