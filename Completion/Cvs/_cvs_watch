#autoload

if (( CURRENT == 2 )); then
  compadd on off add remove
else
  case "$words[2]" in
    on|off) # "+lR"
      _arguments -s \
	-{l,R} \
	':watch command:' \
	':*:file:_cvs_files'
      ;;
    add|remove) # "+lRa:"
      _arguments -s \
	-{l,R} \
	'*-a+:action:(edit unedit commit all none)' \
	':watch command:' \
	':*:file:_cvs_files'
      ;;
  esac
fi
