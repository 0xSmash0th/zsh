#autoload

local targs tag

if [[ "$1" = -C?* ]]; then
  targs=( -C "${1[3,-1]}" )
  shift
elif [[ "$1" = -C ]]; then
  targs=( -C "$2" )
  shift 2
else
  targs=()
fi

if [[ "$1" = -[VJ]* ]]; then
  tag="$2"
else
  tag="$1"
fi

if [[ $# -gt 1 ]]; then
  _tags "$targs[@]" "$tag" && _description "$@"
else
  _tags "$targs[@]" "$tag"
fi
